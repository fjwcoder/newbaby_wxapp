page{
    background-color: #fff;
}
.big_box {
    padding: 30rpx;
}

.box_item {
    width: 100%;
    background-color: #fff;
    height: 260rpx;
    box-shadow: 1px 5px 10px rgba(145, 145, 145, 0.3);
    margin-top: 25rpx;
    display: block;
    width: 94%;
    margin: 0 auto;
    margin-top: 25rpx;
}

.top_box {
    height: 182rpx;
    box-sizing: border-box;
    padding: 28rpx 0;
    border-bottom: 1px solid #f6f6f9;
    background-size: 120rpx auto;
    font-size: 1.7rem;
    background: #fff;
    display: block;
    padding: 40rpx 40rpx;
    line-height: 50rpx;


}

.bottom_box {
    height: 78rpx;
    padding-right: 40rpx;
    overflow: hidden;
}

.item_name {
    font-size: 30rpx;
    color: #555;

}

.item_birthday {
    font-size: 26rpx;
    color: #666;
    margin-left: 50rpx;
}

.more_info {
    font-size: 28rpx;
    color: #666;
    line-height: 60rpx;
}

